{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./",
        "paths": {
            "@/*": ["./src/*"],
            "hooks/*": ["./src/hooks/*"],
            "utils/*": ["./src/utils/*"],
            "views/*": ["./src/views/*"],
            "action/*": ["./src/action/*"],
            "store/*": ["./src/store/*"],
            "styles/*": ["./src/styles/*"],
            "components/*": ["./src/components/*"],
            "asserts/*": ["./src/asserts/*"]
        },
        "incremental": true,
        "outDir": "dist",
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "downlevelIteration": true,
        "allowUnusedLabels": true
    },
    "include": ["./src/**/*", "./typings/**/*"],
    "exclude": ["node_modules", "dist", "config"]
}